.profile-edit-container {
  background-color: #fff;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  position: relative;
  margin-top: 40px;
}

/* 返回按钮 */
.back-btn {
  position: absolute;
  top: 20px;
  left: 20px;
  width: 40px;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 50%;
}

.back-icon {
  width: 24px;
  height: 24px;
}

/* 头像部分 */
.avatar-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60px;
  margin-bottom: 20px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  border: 3px solid #fff;
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
  background: #eee;
}

.membership-info {
  font-size: 14px;
  color: #888;
  margin-top: 25px;
}

.membership-id {
  font-size: 16px;
  font-weight: bold;
  color: #555;
  margin-top: 10px;
}

/* 表单部分 */
.form-container {
  width: 90%;
  background: #fff;
  border-radius: 10px;
  padding: 15px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  margin-top: 30rpx;
}

.form-item {
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 16px;
  color: #333;
}

.input {
  flex: 1;
  text-align: right;
  color: #666;
  font-size: 16px;
}

.picker {
  flex: 1;
  text-align: right;
  color: #666;
  font-size: 16px;
}

/* 保存按钮 */
.save-btn {
  width: 90%;
  background-color: #66CC66;
  color: white;
  border-radius: 25px;
  font-size: 18px;
  margin-top: 60px;
  padding: 12px;
}
