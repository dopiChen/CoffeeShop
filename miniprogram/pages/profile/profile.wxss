/* pages/profile/profile.wxss */

.container {
  background-color: #fff;
  min-height: 100vh;
}

/* Profile Card */
.profile-card {
  margin-top: 20rpx;
  position: relative;
  text-align: center;
  background: #fff;
  border-radius: 20px;
  overflow: hidden;
  margin-bottom: 20px;
  width: 95%;
}
.background-img {
  width: 100%;
  height: 120px;
}

.profile-content {
  display: flex;
  flex-direction: column;
  align-items: center; /* 让内容水平居中 */
  justify-content: center;
  margin-top: -50px; /* 适当上移，确保头像位置合适 */
  padding: 5px; /* 增加 padding 让底部有更多留白 */
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  border: 3px solid #fff;
  background: #eee;
  margin-bottom: 30rpx;
}

.username {
  font-size: 18px;
  font-weight: bold;
  margin-top: 8px;
}

.subtext {
  font-size: 14px;
  color: #888;
  margin-top: 10px;
}

.login-btn {
  background-color: #1a3f91;
  color: white;
  border-radius: 20px;
  font-size: 16px;
  margin-top: 20px;
}

/* 记录栏 */
.stats-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  border-radius: 12px;
  width: 95%;
  padding: 15px 0;
  margin-top: 5rpx;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 10px 0;
}

.stat-icon {
  width: 24px;
  height: 24px;
  margin-bottom: 6px;
}

.stat-label {
  font-size: 14px;
  color: #666;
  margin-bottom: 4px;
}

.stat-value-wrapper {
  display: flex;
  align-items: center;
}

.stat-value {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.stat-arrow {
  font-size: 16px;
  color: #aaa;
  margin-left: 4px;
}

.divider {
  width: 1px;
  height: 40px;
  background: #eee;
}


/* 菜单 */
.menu {
  background: #fff;
  border-radius: 10px;
  margin: 20px;
  width: 95%;
}

.menu-item {
  padding: 12px 15px;
  display: flex;
  justify-content: space-between;
  font-size: 13px;
  height: 50rpx;
  border-bottom: 1px solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

.arrow {
  color: #ccc;
}
