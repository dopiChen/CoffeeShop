/* components/balance-record/index.wxss */
.record-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: #fff;
  border-bottom: 1rpx solid #f5f5f5;
}

.type-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
}

.content-wrapper {
  flex: 1;
}

.main-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.type-text {
  font-size: 32rpx;
  color: #333;
}

.amount {
  font-size: 34rpx;
  font-weight: 500;
}

.amount.income {
  color: #07c160;
}

.amount.expense {
  color: #ff4545;
}

.sub-info {
  display: flex;
  font-size: 24rpx;
  color: #999;
}

.channel {
  margin-left: 24rpx;
  padding-left: 24rpx;
  border-left: 1rpx solid #eee;
}