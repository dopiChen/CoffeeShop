.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 40rpx; /* 增加整体页面的内边距 */
  box-sizing: border-box;
  overflow: auto;
  min-height: 100vh; /* 确保 scroll-view 里内容能撑开页面 */
  padding-bottom: 50rpx; /* 避免最下面的内容被裁剪 */
}

.logo {
  width: 700rpx;
  height: 600rpx;
  margin-bottom: 50rpx;
}

.card-row {
  display: flex;
  justify-content: space-between;
  width: 90%;
  max-width: 700rpx; /* 统一卡片的最大宽度 */
  margin-bottom: 40rpx;
  gap: 20rpx; /* 卡片间距 */
}

.card-row card {
  flex: 1; /* 让每个卡片宽度均分 */
  max-width: 210rpx;
  height: 200rpx; /* 稍微拉高一点，更协调 */
}

.special-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 95%;
  max-width: 700rpx;
  height: 140rpx; /* 稍微加大高度，视觉更舒适 */
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx;
  margin-bottom: 40rpx; /* 让它和轮播图保持合适的距离 */
}

.coffee-icon {
  width: 90rpx;
  height: 90rpx;
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 30rpx;
}

.small-text {
  font-size: 22rpx;
  color: #549644;
}

.main-text {
  font-size: 28rpx; /* 加大字号，让主标题更突出 */
  color: #000000;
  font-weight: bold;
}

.buy-button {
  width: 120rpx;
  height: 50rpx;
  background-color: #FF8C00;
  color: white;
  border-radius: 25rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 24rpx;
  border: none;
}

.swiper-wrap {
  margin-top: 30rpx;
  width: 100%;
  max-width: 700rpx; /* 让轮播图也对齐 */
  height: 280rpx; /* 减少高度，避免留白过多 */
}
