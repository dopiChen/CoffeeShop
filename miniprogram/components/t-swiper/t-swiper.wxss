
.t-swiper {
  position: relative;
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}
.t-swiper__host {
  width: 100%;
  height: 100%;
}
.t-swiper__item {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
.t-swiper__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
