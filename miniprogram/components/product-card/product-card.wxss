/* components/product-card/index.wxss */
.product-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.cover {
  width: 100%;
  height: 380rpx;
}

.info {
  padding: 10rpx;
}

.name {
  font-size: 28rpx;
  color: rgb(7, 6, 6);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  min-height: 50rpx;
  margin-bottom: 0rpx;  /* 减少下边距 */
  line-height: 2.0;   /* 微调行高 */

}

.price-line {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 2rpx 0 10rpx;  
}

.price {
  color: #EF233C;
  font-size: 32rpx;
  font-weight: 600;
}

.sales {
  color: #999;
  font-size: 24rpx;
}

.action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: #FFD166;
  color: #333;
  font-size: 20rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
}

.cart-btn {
  padding: 0;
  line-height: 1;
  margin-right: 15rpx;
}

.cart-icon {
  width: 48rpx;
  height: 48rpx;
}

.product-card.disabled .cover {
  filter: grayscale(100%);
  opacity: 0.6;
}