/* pages/address/address.wxss */
.address-page {
  height: 100vh;
  background: #f5f5f5;
}

.address-list {
  margin-top: 120rpx;
  height: calc(100vh - 120rpx);
  padding: 24rpx;
  margin-right: 20rpx;
}

.address-card {
  background: #fff;
  margin-right: 10rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
}

.address-card.default {
  border-left: 8rpx solid #07c160;
}

.address-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.name {
  font-size: 32rpx;
  font-weight: 500;
  margin-right: 32rpx;
}

.phone {
  color: #666;
  font-size: 28rpx;
}

.tag {
  background: #07c160;
  color: #fff;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-left: auto;
}

.address-detail {
  color: #666;
  font-size: 28rpx;
  line-height: 1.4;
}

.action-bar {
  display: flex;
  justify-content: flex-end;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #eee;
}

.icon-edit, .icon-delete {
  color: #666;
  font-size: 28rpx;
  padding: 8rpx 24rpx;
  margin-left: 32rpx;
}

.icon-delete {
  color: #e54d42;
}

.add-btn {
  position: fixed;
  bottom: 48rpx;
  left: 5%;
  width: 90%;
  height: 88rpx;
  background: #07c160;
  color: #fff;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(7,193,96,0.3);
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}
/* 返回按钮 */
.back-btn {
  position: absolute;
  top: 20px;
  left: 20px;
  width: 40px;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.back-icon {
  width: 24px;
  height: 24px;
}

/* 安全区域适配 */
@supports (padding-bottom: env(safe-area-inset-bottom)) {
  .add-btn {
    bottom: calc(48rpx + env(safe-area-inset-bottom));
  }
}